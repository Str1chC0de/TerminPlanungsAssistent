@model UserModel
@{
    UserModel user = ViewData["user"] as UserModel;
    var Error = TempData["Error"] as string;
    if (!string.IsNullOrEmpty(Error))
    {
        <h2 class="alert-danger" style="padding: 20px">@Error</h2>
    }
}
<h1>Termin ändern</h1>
<div class="col col-md-10 offset-md-1">
    <section>
        <form method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" value="@user.Id" />
                        <input type="hidden" asp-for="AccessLevel" value="@user.AccessLevel" />
                        <datalist type="hidden" asp-for="Meetings" value="@user.Meetings" ></datalist>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>User Name</label>
                        <br/>
                        <input asp-for="UserName" value="@user.UserName" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <br />
                        <input type="email" asp-for="Email" value="@user.Email" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Passwort</label>
                        <br />
                        <input type="password" asp-for="Password" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Passwort Wiederholen</label>
                        <br />
                        <input type="password" asp-for="ConfirmPassword" />
                    </div>
                </div>
            </div>
            <button type="submit" asp-controller="Auth" asp-action="EditUser" class="btn btn-primary">Ändern</button>
        </form>
    </section>
</div>
@model WebServer.Models.UserModel
@{
    ViewData["Title"] = "LoginView";
    Layout = "~/Views/User/_AuthLayout.cshtml";
    var Error = TempData["Error"] as string;
    if (!string.IsNullOrEmpty(Error))
    {
        if (Error.Contains("Erfolg"))
        {
            <h2 class="alert-info" style="padding: 20px">@Error</h2>
        }
        else
        {
            <h2 class="alert-danger" style="padding: 20px">@Error</h2>
        }
    }
}
<div class="card-body">
    <form method="post">
        <div class="row">
            <h6>E-Mail/Benutzername:</h6>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="row">
            <h6>Passwort:</h6>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <br />

        <div class="row">
            <button type="submit" asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-block">Anmelden</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}